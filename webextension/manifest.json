{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "short_name": "__MSG_extShortName__",
  "version": "0.0.1",
  "minimum_chrome_version": "63.0",

  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "16":"images/brand/16.png",
    "48":"images/brand/48.png",
    "128":"images/brand/128.png"
  },

  "author": "Danny Verb",
  "homepage_url": "https://github.com/dverb20/netflix-categories",
  "browser_action": {
    "default_icon": "images/brand/128.png",
    "default_popup": "browser-action/popup.html",
    "default_title": "Netflix Surf"
  },
  "background": {
    "scripts": [
      "libs/dov-utils.js",
      "core/js/config.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "data/user-preferences-default.json"
  ],
  "permissions": [
    "storage",
    "contextMenus"
  ]
}
